<Window x:Class="Amonic.ReasonExit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Amonic"
        mc:Ignorable="d"
        Title="ReasonExit" MinHeight="450" MinWidth="400" MaxHeight="450" MaxWidth="400">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Name="infoUserSpentInSystem" Margin="0 0 0 10"></TextBlock>
            <TextBlock Name="infoUserDate" Margin="0 0 0 10"></TextBlock>
            <TextBlock Name="infoUserLogin" Margin="0 0 0 10"></TextBlock>
            <TextBlock Name="infoUserLogout" Margin="0 0 0 10"></TextBlock>
            <TextBlock Text="Reason:" Margin="0 0 0 10"></TextBlock>
            <TextBox Text="{Binding Reason}" Name="BoxReason" Height="150" Width="250" Margin="0 0 0 20"></TextBox>
            <Button Name="ConfirmBtn" Content="Confirm" Click="ConfirmBtn_Click"></Button>
        </StackPanel>
    </Grid>
</Window>
