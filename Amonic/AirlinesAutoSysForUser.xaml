<Window x:Class="Amonic.AirlinesAutoSysForUser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Amonic"
        mc:Ignorable="d"
        Title="AirlinesAutoSysForUser" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>

        <Menu Grid.Row="0" Height="25" VerticalAlignment="Top">
            <MenuItem Name="ExitBtn" Header="Exit" Click="ExitBtn_Click"></MenuItem>
        </Menu>
        <Frame Name="MainFrame" Grid.Row="1"></Frame>
    </Grid>
</Window>
